{
    "compilerOptions": {
        "rootDir": "src",
        "module": "esnext",
        "moduleResolution": "Node",
        "target": "ES6",
        "lib": ["es2015", "es6", "es7", "dom"],
        "declaration": true,
        "declarationDir": "dist",
        "sourceMap": true,
        "importHelpers": true,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", "webpack", "dist", "develop", "**/*.test.ts"],
    "types": ["typePatches"]
}
